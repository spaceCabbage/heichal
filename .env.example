# =================================
# Example .env file for Heichal TMS
# =================================


# ENVIRONMENT CONFIGURATION
# Set to 'dev' for development or 'prod' for production
ENVIRONMENT=dev

# DATABASE CONFIGURATION
POSTGRES_DB=heichal_db
POSTGRES_USER=heichal_admin
POSTGRES_PASSWORD=adminadmin
DATABASE_URL=postgresql://heichal_admin:adminadmin@postgres:5432/heichal_db

# DJANGO CONFIGURATION
DJANGO_SECRET_KEY=your-super-secret-django-key-generate-a-new-one-please
DJANGO_DEBUG=true
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# FRONTEND CONFIGURATION (DEV)
VITE_API_URL=http://localhost:8000

# PRODUCTION CONFIGURATION
# Domain for SSL certificate (production only)
DOMAIN=yourdomain.com

# OPTIONAL: EXTERNAL SERVICES
# Email configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
EMAIL_PORT=587
EMAIL_USE_TLS=true

# JWT Configuration
JWT_SECRET_KEY=another-super-secret-key-for-jwt-tokens
JWT_ACCESS_TOKEN_LIFETIME=15  # minutes
JWT_REFRESH_TOKEN_LIFETIME=7  # days

# Redis (for caching and sessions - optional)
# REDIS_URL=redis://redis:6379/0

# File uploads
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
